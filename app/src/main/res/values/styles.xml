<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewFontWeight">
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ButtonMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_eerie_black</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_default</item>
        <item name="iconTint">@color/color_eerie_black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleHead">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TitleHead.White" parent="TitleHead">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="TitleHeadDefaultSize" parent="TitleHead.White">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TitleText" parent="TitleHead">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="TextViewSettings" parent="TextViewFontWeight">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <style name="EditText" parent="TextViewFontWeight">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/search_hint</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/color_eerie_black</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="EditTextCreatePlaylist" parent="EditText">
        <item name="android:textColorHint">@color/snackbar_background</item>
    </style>

    <style name="TrackName" parent="TextViewFontWeight">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/track_title</item>
    </style>

    <style name="ArtistNameAndTiming" parent="TrackName">
        <item name="android:textSize">@dimen/text_size_extra_small</item>
        <item name="android:textColor">@color/track_artist_and_timing</item>
    </style>

    <style name="ButtonSearchError" parent="TextViewFontWeight">
        <item name="android:textSize">@dimen/text_size_little</item>
        <item name="android:backgroundTint">@color/color_eerie_black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius_large</item>
    </style>

    <style name="TextViewSearch" parent="TextViewFontWeight">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/color_eerie_black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewPlayerTrackInfoAdditional" parent="TextViewFontWeight">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="TextViewPlayerTrackInfoAdditionalColorTitle" parent="TextViewPlayerTrackInfoAdditional">
        <item name="android:textColor">@color/color_silver_foil</item>
    </style>

    <style name="TextViewPlayerTrackInfoAdditionalColorValue" parent="TextViewPlayerTrackInfoAdditional">
        <item name="android:textColor">@color/track_title</item>
    </style>

    <style name="TextViewPlayerTrackInfoMain" parent="TextViewFontWeight">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/track_title</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TabLayout" parent="TextViewFontWeight">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_little</item>
        <item name="tabIndicatorColor">@color/color_eerie_black</item>
        <item name="tabTextColor">@color/color_eerie_black</item>
        <item name="tabSelectedTextColor">@color/color_eerie_black</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ButtonNewPlaylist" parent="Widget.Material3.Button">
        <item name="android:textSize">@dimen/text_size_little</item>
        <item name="backgroundTint">@color/color_eerie_black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius_large</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="shapeAppearanceMediumComponent">@style/RoundedCorners</item>
    </style>

    <style name="RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="TextViewPlaylistInfoTitle">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textColor">@color/color_eerie_black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextViewPlaylistInfoDescription" parent="TextViewFontWeight">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textColor">@color/color_eerie_black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LightDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/color_eerie_black</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/color_royal_blue</item>
    </style>
</resources>