<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_extra_extra_small"
            android:layout_marginStart="@dimen/margin_extra_extra_small"
            android:layout_marginEnd="@dimen/margin_extra_large">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_little"
                    android:src="@drawable/ic_arrow_back" />

                <TextView
                    style="@style/TitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_little"
                    android:text="@string/settings" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_little"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big">

            <TextView
                style="@style/TextViewSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_medium"
                android:text="@string/theme_dark" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:paddingVertical="@dimen/padding_small"
                android:thumbTint="@color/thumb_color"
                android:trackTint="@color/switch_tint_track" />

        </FrameLayout>

        <TextView
            android:id="@+id/button_share"
            style="@style/TextViewSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_medium"
            android:drawablePadding="@dimen/margin_normal"
            android:paddingEnd="@dimen/padding_normal"
            android:text="@string/share"
            app:drawableEndCompat="@drawable/ic_share" />

        <TextView
            android:id="@+id/button_support"
            style="@style/TextViewSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_medium"
            android:drawablePadding="@dimen/margin_default"
            android:paddingEnd="@dimen/padding_default"
            android:text="@string/write_to_support"
            app:drawableEndCompat="@drawable/ic_support" />

        <TextView
            android:id="@+id/button_users_agreement"
            style="@style/TextViewSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_medium"
            android:drawablePadding="@dimen/margin_little"
            android:paddingEnd="@dimen/padding_medium"
            android:text="@string/users_agreement"
            app:drawableEndCompat="@drawable/ic_arrow_forward" />

    </LinearLayout>
</LinearLayout>